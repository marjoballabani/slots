{
    "extends": "eslint:recommended",
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 6
    },
    "rules": {
        "indent": [
            "warn",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "warn",
            "unix"
        ],
        "max-params": "off",
        "max-len": [
            "warn",
            {
                "code": 130,
                "ignoreUrls": true,
                "ignoreTemplateLiterals": true,
                "ignoreRegExpLiterals": true
            }
        ],
        "no-trailing-spaces": [
            "warn",
            {
                "skipBlankLines": false
            }
        ],
        "no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "^_"
            }
        ],
        "no-console": "off",
        "no-empty": "off",
        "valid-typeof": 2,
        "space-before-function-paren": [
            "warn",
            {
                "anonymous": "always",
                "named": "never",
                "asyncArrow": "ignore"
            }
        ],
        "space-in-parens": [
            "warn",
            "never"
        ], 
        "space-after-keywords": "off",
        "keyword-spacing": [
            "warn",
            {
                "after": true
            }
        ],
        "eol-last": [
            "warn",
            "always"
        ],
        "no-multiple-empty-lines": [
            "warn",
            {
                "max": 2
            }
        ]
    },
    "globals": {
        "angular": true,
        "tinycolor": true,
        "_": true,
        "io": true,
        "Authoring": true
    }
}
